{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "labels": ["deps"],
  "timezone": "Asia/Tokyo",
  "schedule": ["before 6am on monday"],
  "prConcurrentLimit": 5,
  "stabilityDays": 3,
  "packageRules": [
    {
      "matchManagers": ["pip"],
      "matchPackageNames": ["plotly", "kaleido"],
      "groupName": "plotly-stack",
      "enabled": true
    },
    {
      "matchManagers": ["pip"],
      "matchPackagePatterns": [".*"],
      "separateMinorPatch": true
    },
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
